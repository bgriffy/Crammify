<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">
    <link rel="stylesheet" href="/stylesheets/show.css">

    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/workspaces/<%= workspace._id %>/reviews" method="POST" class="mb-4 mb-md-5 validated-form"
                novalidate>
                <!-- Rating -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">Leave a Review</h2>
                        <p class="card-text">
                            <div>
                                <h5>Rating</h5>
                                <fieldset class="starability-basic mb-3">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                                        aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                            
                        </p>
                    </div>

                    <ul class="list-group list-group-flush">
                        <!-- Noise Level -->
                        <li class="list-group-item text-muted">
                            <h5>Noise Level</h5>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[noiseLevel]" id="quietNoiseLevelRadio" value="0">
                                <label class="form-check-label" for="quietNoiseLevelRadio">Quiet</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[noiseLevel]" id="neutralNoiseLevelRadio" value="1">
                                <label class="form-check-label" for="neutralNoiseLevelRadio">Neutral</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[noiseLevel]" id="noisyNoiseLevelRadio" value="2">
                                <label class="form-check-label" for="noisyNoiseLevelRadio">Noisy</label>
                            </div>
                            <div class="form-check form-check-inline mb-3">
                                <input class="form-check-input" type="radio" name="review[noiseLevel]" id="loudNoiseLevelRadio" value="3">
                                <label class="form-check-label" for="loudNoiseLevelRadio">Loud</label>
                            </div>
                        </li>

                        <!-- Lighting -->
                        <li class="list-group-item text-muted">
                            <h5>Lighting</h5>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[lightingLevel]" id="poorLighting" value="0">
                                <label class="form-check-label" for="poorLighting">Poor</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[lightingLevel]" id="acceptableLighting" value="1">
                                <label class="form-check-label" for="acceptableLighting">Acceptable</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[lightingLevel]" id="goodLighting" value="2">
                                <label class="form-check-label" for="goodLighting">Good</label>
                            </div>
                            <div class="form-check form-check-inline mb-3">
                                <input class="form-check-input" type="radio" name="review[lightingLevel]" id="excellentLighting" value="3">
                                <label class="form-check-label" for="excellentLighting">Excellent</label>
                            </div>
                        </li>

                        <!-- Space Available -->
                        <li class="list-group-item text-muted">
                            <h5>Space Available</h5>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[spaceAvailable]" id="crampedSpaceRadio" value="0">
                                <label class="form-check-label" for="crampedSpaceRadio">Cramped</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[spaceAvailable]" id="individualSpaceRadio" value="1">
                                <label class="form-check-label" for="individualSpaceRadio">Individuals only</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="review[spaceAvailable]" id="smallGroupSpaceRadio" value="2">
                                <label class="form-check-label" for="smallGroupSpaceRadio">Small groups</label>
                            </div>
                            <div class="form-check form-check-inline mb-3">
                                <input class="form-check-input" type="radio" name="review[spaceAvailable]" id="largeGroupSpaceRadio" value="3">
                                <label class="form-check-label" for="largeGroupSpaceRadio">Large groups</label>
                            </div>
                        </li>

                        <!-- Review Text -->
                        <textarea class="form-control list-group-item" name="review[body]" id="body" cols="30" rows=5 required
                            placeholder="Share details of your own experience at this workspace"></textarea>
                        <div class="valid-feedback">Looks good!</div>
                    </ul>
    
                    <!-- <div class="card-body">
                        
                    </div>
    
                    <div class="card-footer text-muted">
                        
                    </div> -->
                </div>
                <button class="btn btn-success btn-custom">Submit</button>
            </form>
        </div>
    </div>