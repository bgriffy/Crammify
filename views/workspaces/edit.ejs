<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Workspace</h1>
        <div class="col-6 offset-3">
            <form action="/workspaces/<%= workspace._id %>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" class="form-control" name="workspace[title]" required
                        value="<%= workspace.title %>">
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="workspace[location]" required
                        value="<%= workspace.location %>">
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" class="form-control" id="description" required
                        name="workspace[description]"><%= workspace.description %> </textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Add images</label>
                    <input class="form-control" type="file" id="formFile" name="image" multiple>
                </div>

                <div class="mb-3">
                    <% workspace.images.forEach(function(img, index){ %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%=index%>" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=index%>">Delete</label>
                    <% }) %> 
                </div>

                <div class="mb-3"><button class="btn btn-info">Update workspace</button></div>
            </form>
            <a href="/workspaces/<%= workspace._id %>">Back To workspace</a>
        </div>
    </div>